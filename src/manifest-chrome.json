{
  "manifest_version": 3,
  "name": "URL Replacer",
  "version": "1.0",
  "description": "Replace image source URLs",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "./icons/url-updater_16.png",
      "32": "./icons/url-updater_32.png",
      "48": "./icons/url-updater_48.png",
      "128": "./icons/url-updater_128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "./icons/url-updater_16.png",
    "32": "./icons/url-updater_32.png",
    "48": "./icons/url-updater_48.png",
    "128": "./icons/url-updater_128.png"
  }
}